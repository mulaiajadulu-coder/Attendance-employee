# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Get these from Supabase/Render)
DB_HOST=your_db_host
DB_PORT=5432
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration (Change these to strong secrets!)
JWT_SECRET=generate_a_random_string_here
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=generate_another_random_string_here
JWT_REFRESH_EXPIRES_IN=7d

# CORS (Comma separated URLs of your deployed frontend)
FRONTEND_URL=https://your-app.vercel.app

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Face Recognition
FACE_RECOGNITION_THRESHOLD=0.6
FACE_CONFIDENCE_MIN=70

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM_ADDRESS=your_email@gmail.com
EMAIL_FROM_NAME=Absensi System
